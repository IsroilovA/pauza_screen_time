<?xml version="1.0" encoding="utf-8"?>
<!--
  Configuration for AppMonitoringService (AccessibilityService).
  
  This service monitors foreground app changes to detect when a restricted
  app is launched, enabling the plugin to show a blocking shield overlay.
-->
<accessibility-service
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:accessibilityEventTypes="typeWindowStateChanged"
    android:accessibilityFeedbackType="feedbackGeneric"
    android:notificationTimeout="100"
    android:canRetrieveWindowContent="true"
    android:description="@string/accessibility_service_description" />
